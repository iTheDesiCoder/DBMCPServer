# Environment Variables for MCP Server
# Copy this file to .env and configure your values

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# API Security
API_KEY=your-secret-api-key-change-me

# Database Connection Strings (alternative to config.yaml)
# SQLSERVER_CONNECTION_STRING=DRIVER={ODBC Driver 17 for SQL Server};SERVER=localhost;DATABASE=YourDatabase;UID=username;PWD=password
# DB2_CONNECTION_STRING=DATABASE=SAMPLE;HOSTNAME=localhost;PORT=50000;PROTOCOL=TCPIP;UID=username;PWD=password

# Redis Cache
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
